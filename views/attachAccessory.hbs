<main>
  <h1>Attach a new accessory</h1>
  <div class="form">
    <h2>{{one.name}}</h2>
    <img class="cube" src={{one.imageUrl}}>
    <form action='/products/{{one._id}}/attach' method="POST">
      <label for="accessory">Accessories</label>
      <select id="accessory" name="accessory">
        {{#each accessories}}
        <option value="{{_id}}">{{name}}</option>
        {{/each}}
      </select>
      <input type="submit" value="Attach">
    </form>
    <h3 class="italic">{{one.description}}
    </h3>
    <a class="btn" href="/products">Back</a>
  </div>
</main>